/* pages/goods/index/index.wxss */
.header-input{
  background-color:#fff;
}
.left-icon{
  left:30rpx;
}
.right-icon{
  right:30rpx;
}
.content{
  top:120rpx;
  margin-top:0;
  width:100%;
  display: flex;
  position: relative;
}
.content-left{
  position: fixed;
  display: flex;
  flex-direction: column;
  width:200rpx;
  background-color:#f1f2f3;
}
.content-left .left-item{
  width:100%;
  height: 125rpx;
  line-height:125rpx;
  text-align: center;
  font-size:32rpx;
  color: #585c64;
  white-space: nowrap;
  overflow: hidden;
  box-sizing: border-box;
  text-overflow: ellipsis;
}
.left-item-on{
  background-color: #fff;
  border-left: 8rpx solid #e64340;
}
.content-right{
  margin-left:200rpx;
  flex:1;
  width:100%;
  
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-right .title{
  display: block;
  width:600rpx;
  height:80rpx;
  margin:45rpx 20rpx 20rpx;
  padding-top:20rpx;
  font-size:34rpx;
  font-weight:600;
}
.item-box{
  margin-top:40rpx;
  width:600rpx;
  display: flex;
  flex-wrap: wrap;
}
.item-box .item-box-info{
  width: 30%;
  height:255rpx;
  text-align: center;
  margin-bottom:20rpx;
}
.item-img{
  width:100%;
  height:200rpx;
}
.item-img image{
  width:100%;
  height:100%;
}
.item-box-info item-name{
  display: block;
  width: 100%;
  height:45rpx;
  line-height: 30rpx;
  margin-top:5rpx;
  font-size:32rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
