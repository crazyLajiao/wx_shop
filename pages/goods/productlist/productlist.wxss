/* pages/goods/productlist/productlist.wxss */
.top-nav{
  width:100%;
  height:72rpx;
  display: flex;
  justify-content: start;
  font-size:36rpx;
  margin-bottom:30rpx;
}
.top-nav .nav-item{
  height:72rpx;
  line-height: 72rpx;
  border:1rpx solid #ccc;
  text-align: center;
  color:#e64340;
}
.top-nav .store{
  width:28%;
  
}
.top-nav .price{
  width:24%;
 
}
.top-nav .discount{
  width:24%;

}
.top-nav .filter{
  width:24%;
 
}
.content{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.content .content-item{
  width:47%;
  height: 586rpx;
  margin-top:40rpx;
  position: relative;
}
.mask{
  position: absolute;
  top:20%;
  left:50%;
  margin-left:-100rpx;
  width:200rpx;
  height:200rpx;
  line-height: 200rpx;
  border-radius: 50%;
  background-color: rgba(0,0,0,.6);
  z-index: 99;
  color:#fff;
  font-size: 42rpx;
  text-align: center;
}
.content-item .item-img{
  width:100%;
  height: 450rpx;
}
.content-item .item-img image{
  width:100%;
  height:100%;
}
.content-item .item-name{
  width:100%;
  height:65rpx;
  padding:4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  font-size: 26rpx;
}
.content-item .price{
  width:100%;
}
.content-item .price .new{
  font-size:28rpx;
  color:#e64340;
}
.content-item .price .old{
  font-size: 24rpx;
  color:#98989f;
  margin-left:6rpx;
  text-decoration: line-through;
}
.content-item .price .disc{
  display: inline-block;
  width:75rpx;
  text-align: center;
  margin-left:100rpx;
  background-color: #e64340;
  color:#fff;
  font-size: 22rpx;
  
}